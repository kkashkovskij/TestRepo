

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Home page
GET     /                             controllers.Application.index
GET     /chapterInfo                         controllers.Application.chapterInfo(id: Int)
GET     /articleInfo                       controllers.Application.articleInfo(id: Int)
GET    /delete/article                controllers.Application.deleteArticle(id: Int)
GET    /delete/chapter                controllers.Application.deleteChapter(id: Int)

# Home page
POST    /insert/article                controllers.Application.insertArticle
POST    /insert/chapter                controllers.Application.insertChapter
POST    /editChapter                        controllers.Application.editChapter(id: Int)
POST    /editArticle                        controllers.Application.editArticle(id: Int)

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.at(path="/public", file)